{
  "name": "@sharkord/desktop",
  "private": true,
  "version": "0.0.5",
  "type": "module",
  "trustedDependencies": [
    "electron"
  ],
  "main": "dist/main/index.cjs",
  "scripts": {
    "dev": "bun run build:sidecar:optional && concurrently -k \"cd ../client && bun run dev\" \"bun run dev:main\" \"bun run dev:electron\"",
    "dev:main": "tsup src/main/index.ts src/preload/index.ts --format cjs --platform node --out-dir dist --external electron --sourcemap --watch --clean",
    "dev:electron": "wait-on tcp:5173 file:dist/main/index.cjs && cross-env ELECTRON_RENDERER_URL=http://localhost:5173 electronmon .",
    "build:sidecar": "node ./scripts/build-sidecar.mjs --release",
    "build:sidecar:optional": "node ./scripts/build-sidecar.mjs --release --optional",
    "build:main": "tsup src/main/index.ts src/preload/index.ts --format cjs --platform node --out-dir dist --external electron --clean",
    "prepare:renderer": "node ./scripts/prepare-renderer-dist.mjs",
    "build": "cd ../client && bun run build && cd ../desktop && bun run prepare:renderer && bun run build:sidecar && bun run build:main && bun run package:preview",
    "package:preview": "electron-builder --dir",
    "format": "prettier --write \"src/**/*.ts\" \"scripts/**/*.mjs\"",
    "check-types": "bun run typecheck",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ./src --ext .ts",
    "test": "bun test"
  },
  "build": {
    "appId": "com.sharkord.desktop",
    "productName": "Sharkord Desktop",
    "icon": "icons/icon.png",
    "directories": {
      "output": "build/out",
      "buildResources": "assets"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "jonocairns",
        "repo": "swsh"
      }
    ],
    "asar": true,
    "files": [
      "dist/**/*",
      "renderer-dist/**/*",
      "assets/icons/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "sidecar/bin",
        "to": "sidecar/bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": [
        "dir"
      ],
      "category": "public.app-category.social-networking"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "executableName": "Sharkord",
      "icon": "icons/icon.ico"
    },
    "linux": {
      "target": [
        "dir"
      ],
      "category": "Network",
      "icon": "icons/icon.png"
    },
    "nsis": {
      "installerIcon": "icons/icon.ico",
      "uninstallerIcon": "icons/icon.ico",
      "installerHeaderIcon": "icons/icon.ico"
    },
    "portable": {
      "artifactName": "Sharkord.exe"
    }
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.5.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.2",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "prettier": "^3.4.2",
    "tsup": "^8.5.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "wait-on": "^8.0.5"
  }
}