{
  "name": "@sharkord/desktop",
  "private": true,
  "version": "0.0.3",
  "type": "module",
  "trustedDependencies": [
    "electron"
  ],
  "main": "dist/main/index.cjs",
  "scripts": {
    "dev": "concurrently -k \"cd ../client && bun run dev\" \"bun run dev:main\" \"bun run dev:electron\"",
    "dev:main": "tsup src/main/index.ts src/preload/index.ts --format cjs --platform node --out-dir dist --external electron --sourcemap --watch --clean",
    "dev:electron": "wait-on tcp:5173 file:dist/main/index.cjs && cross-env ELECTRON_RENDERER_URL=http://localhost:5173 electronmon .",
    "build:main": "tsup src/main/index.ts src/preload/index.ts --format cjs --platform node --out-dir dist --external electron --clean",
    "prepare:renderer": "node ./scripts/prepare-renderer-dist.mjs",
    "build": "cd ../client && bun run build && cd ../desktop && bun run prepare:renderer && bun run build:main && bun run package:preview",
    "package:preview": "electron-builder --dir",
    "format": "prettier --write \"src/**/*.ts\" \"scripts/**/*.mjs\"",
    "check-types": "bun run typecheck",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ./src --ext .ts",
    "test": "bun test"
  },
  "build": {
    "appId": "com.sharkord.desktop",
    "productName": "Sharkord Desktop",
    "directories": {
      "output": "build/out"
    },
    "asar": true,
    "files": [
      "dist/**/*",
      "renderer-dist/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dir"
      ],
      "category": "public.app-category.social-networking"
    },
    "win": {
      "target": [
        "dir"
      ]
    },
    "linux": {
      "target": [
        "dir"
      ],
      "category": "Network"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.5.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.2",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "prettier": "^3.4.2",
    "tsup": "^8.5.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "wait-on": "^8.0.5"
  }
}
